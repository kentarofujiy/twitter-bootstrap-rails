<%%- model_class = <%= resource_name.classify %> -%>
<div class="page-header">
  <h1><%%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
<%% @<%= plural_resource_name %>.each do |<%= resource_name %>| %>
  
  <%- columns.each do |column| -%>
  <div class="card" style="width: 18rem;"> ERB
      <img class="card-img-top" src="https://picsum.photo/100/180/" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%%= <%= resource_name %>.<%= column.name %> %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the cards content.</p>
       <%%= link_to t('.show', :default => t("helpers.links.show")),
                      <%= singular_controller_routing_path %>_path(<%= resource_name %>), :class => 'btn btn-default btn-xs' %>
          <%%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_<%= singular_controller_routing_path %>_path(<%= resource_name %>), :class => 'btn btn-default btn-xs' %>
          <%%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      <%= singular_controller_routing_path %>_path(<%= resource_name %>),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
      </div>
    <%- end -%>

  <%% end %>
</div>

<%%= link_to t('.new', :default => t("helpers.links.new")),
            new_<%= singular_controller_routing_path %>_path,
            :class => 'btn btn-primary' %>

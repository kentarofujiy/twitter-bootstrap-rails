    <div class="container">
        <div class="media-container-row">
            <div class="title col-12 col-md-8">
                <%- columns.each_with_index do |column, index| -%>
                    <% if index == 0 %>
                <h2 class="align-center pb-3 mbr-fonts-style display-5"><%%= @<%= resource_name %>.<%= column.name %> %></h2>
                <h3 class="mbr-section-subtitle align-center mbr-light mbr-fonts-style display-7"><em>By John Smith posted July 30, 2016</em></h3>
                
            </div>
        </div>
    </div>
</section>

<section class="mbr-section article content1 cid-qvbjomyZfb" id="content1-7y" data-rv-view="3586">
    
     

    <div class="container">
        <div class="media-container-row">
            <% elsif index == 1 %>
            <div class="mbr-text col-12 col-md-8 mbr-fonts-style display-7"><%%= @<%= resource_name %>.<%= column.name %> %></div>
        </div>
    </div>
</section>

<section class="mbr-section article content1 cid-qvbjsgNEPl" id="content2-7z" data-rv-view="3587">

     

    <div class="container">
        <div class="media-container-row">
            <% else %>
            <div class="mbr-text col-12 col-md-8 mbr-fonts-style display-7">
                <blockquote><%%= @<%= resource_name %>.<%= column.name %> %></blockquote>
            </div>
            <% end %>
            <%- end -%>
        </div>
    </div>
</section>




<section class="container">
<%%= link_to t('.back', :default => t("helpers.links.back")),
              <%= controller_routing_path %>_path, :class => 'btn btn-default'  %>
